---
import Layout from '../layouts/Layout.astro';
import VideoConverter from '../components/VideoConverter';
import '../styles/global.css';

const title = "Descarga Videos de YouTube a MP3 o MP4 | Vituve";
const description = "Convierte videos de YouTube a MP3 o MP4 con la mejor calidad y sin límites. Descarga gratis y sin registro.";
---

<Layout title={title}>
  <head>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
  </head>

  <main class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <section class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        Convierte Videos de YouTube a MP3 o MP4 Gratis
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Descarga videos de YouTube en alta calidad sin necesidad de software. Rápido, gratuito y sin límites.
      </p>
    </section>
    <section>
      <VideoConverter platform="youtube" client:load />
    </section>
  </main>
</Layout>
