---
import { FaYoutube, FaFacebook } from 'react-icons/fa';
import { FaTiktok } from 'react-icons/fa';

interface Props {
  title: string;
  description: string;
  icon: 'youtube' | 'facebook' | 'tiktok';
  href: string;
}

const { title, description, icon, href } = Astro.props;

const icons = {
  youtube: FaYoutube,
  facebook: FaFacebook,
  tiktok: FaTiktok,
};

const IconComponent = icons[icon];
---

<a
  href={href}
  class="block p-8 bg-white rounded-xl border border-gray-200 shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300"
>
  <div class="flex flex-col items-center text-center space-y-6">
    <IconComponent className={`w-24 h-24 ${
      icon === 'youtube' 
        ? 'text-red-600' 
        : icon === 'facebook' 
        ? 'text-blue-600' 
        : 'text-black'
    }`} />
    <h2 class="text-3xl font-bold text-gray-900">{title}</h2>
    <p class="text-xl text-gray-600">{description}</p>
  </div>
</a>